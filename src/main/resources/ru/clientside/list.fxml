<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="582.0" prefWidth="847.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.clientside.controller.ListController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label prefHeight="43.0" prefWidth="282.0" text="Список всех вагонов" textAlignment="CENTER">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <font>
            <Font size="29.0" />
         </font>
      </Label>
      <TableView fx:id="tableRailwayCarriage" prefHeight="321.0" prefWidth="808.0">
         <columns>
            <TableColumn fx:id="numberColumn" prefWidth="57.6" text="Номер " />
            <TableColumn fx:id="loadCapacityColumn" prefWidth="117.6" text="Грузоподъемность" />
            <TableColumn fx:id="wagonWeightColumn" prefWidth="118.4" text="Собственная масса" />
            <TableColumn fx:id="axialLoadColumn" prefWidth="107.2" text="Осевая нагрузка" />
            <TableColumn fx:id="typeColumn" prefWidth="252.8" text="Тип вагона" />
            <TableColumn fx:id="locationColumn" prefWidth="154.4" text="Местоположение" />
         </columns>
      </TableView>
      <Button fx:id="add" alignment="CENTER" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" prefHeight="46.0" prefWidth="202.0" text="Добавить">
         <font>
            <Font size="22.0" />
         </font>
         <cursor>
            <Cursor fx:constant="NONE" />
         </cursor>
      </Button>
   </children>
</VBox>
